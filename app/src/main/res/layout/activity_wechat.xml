<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical"
    tools:context="com.kanghanbin.wanandroid.ui.fragment.HomeFragment">
    <include layout="@layout/view_toolbar"></include>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_wechat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/theme_color_primary"
        app:tabIndicatorColor="@color/theme_color_primary"
        app:tabIndicatorHeight="@dimen/dp_4"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/lightgray"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/rv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>