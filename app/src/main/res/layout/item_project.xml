<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:elevation="@dimen/dp_8"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_margin="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        >

        <ImageView
            android:id="@+id/iv_article_img"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_100"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_article_img"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:maxLines="1"
            tools:text="TEST" />

        <TextView
            android:id="@+id/tv_article_date_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_article_img"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_article_img"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="TEST" />

        <TextView
            android:id="@+id/tv_article_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_article_date_author"
            android:layout_below="@id/tv_article_title"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@id/iv_article_img"
            android:ellipsize="end"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:maxLines="4"
            tools:text="TEST" />

    </RelativeLayout>


</android.support.v7.widget.CardView>