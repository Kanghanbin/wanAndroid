<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" tools:ignore="DuplicateDefinition">
        <!-- for library use when is in night theme-->
        <item name="themeColorSecondary">@color/theme_color_secondary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/theme_color_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="android:colorAccent">@color/theme_color_primary_dark</item>
        <item name="android:colorControlActivated">@color/theme_color_primary</item>
        <item name="actionMenuTextColor">#ffffff</item>


        //沉浸状态栏
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>

    </style>
</resources>